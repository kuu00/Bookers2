<%= render 'books/list', books: @books, user: @user %>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td><%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(100,100) %></td>
          <% end %>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit", edit_book_path, class: 'btn btn-success btn-sm' %></td>
          <% if @book.user == current_user %>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm"=>"投稿を削除します。よろしいですか？", class: "btn btn-denger btn-sm" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>