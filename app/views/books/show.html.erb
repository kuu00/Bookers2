<main>
<%= render 'books/list', book: @books, user: @user %>

<div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td><%= link_to user_path(@user) do %>
          <%= image_tag @user.get_profile_image(80,80) %>
