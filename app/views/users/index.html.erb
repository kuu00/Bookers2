<main>
<p id="notice"><%= notice %></p>

<%= render 'books/list', book: @book, user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(80,80) %></td>
            <td><%= @user.name %></td>
            <td><%= link_to "Show", users_path(@user) %></td>
          </tr>
      </tbody>
    </table>
</div>
</main>